{% extends 'base.html.twig' %}

{% block title %}
	{{controller_name}}
{% endblock %}

{% block body %}

    <div class="container my-5" style="width: 400px">

        <!-- Partie Connexion -->
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="text-center mb-4">Se connecter</h1>

            <div data-mdb-input-init class="form-outline mb-4">
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" autofocus/>
                <label class="form-label" for="username">Email</label>
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"/>
                <label class="form-label" for="password">Mot de passe</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                #}
            <div class="row mb-4">
                <div class="col-md-6 d-flex justify-content-center">
                    <div class="checkbox form-check mb-3 mb-md-0">
                        <input type="checkbox" class="form-check-input" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Se souvenir de moi</label>
                    </div>
                </div>

                <div class="col-md-6 d-flex justify-content-center">
                    <a href="#!">Mot de passe oubli√© ?</a>
                </div>
            </div>

            <button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block mb-4">Se connecter</button>

            <div class="text-center">
                <p>Vous n'avez pas de compte ?
                    <a href="{{path('app_register')}}">S'enregistrer</a>
                </p>
            </div>
        </form>
    </div>

{% endblock %}

